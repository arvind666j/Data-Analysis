#Restaurant Growth
select visited_on,
        (select sum(amount) 
        from customer 
        where visited_on between date_sub(c.visited_on, INTERVAL 6 DAY) and c.visited_on) as amount,
       ROUND((select sum(amount)/7 from customer where visited_on between date_sub(c.visited_on, INTERVAL 6 DAY) and c.visited_on),2) As Average_amount

       from customer c
        where visited_on >= (select DATE_ADD(min(visited_on), INTERVAL 6 DAY) FROM customer
        ) group by visited_on;
